{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recomended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recomended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules":  {
      "prettier/prettier": "error",
      "import/extensions":[
        "error",
        "ignorePackages",
        {
          "ts": "never"
        }
      ],
        "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "interface",
          "format": ["camelCase"],
          "custom": {
            "regex": "^I[A-Z]",
            "match": true
          }
        }
      ]

    },
    "settings": {
      "import/resolver":{
        "typescript":{}
      }
    }
}
